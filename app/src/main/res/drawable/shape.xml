            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/myGray" />
            <corners android:radius="5dp" />
        </shape>
    </item>
